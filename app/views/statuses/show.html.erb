<% provide(:title, @status.content) %>
<div id="show_status">

	<div class="col-md-6 col-md-offset-3">

		<ol class="statuses">
			<li class="status_updates">
				<%= link_to @status.user.name, @status.user %><br />
				<small><%= time_ago_in_words(@status.created_at) %> ago</small>
				<p><%= @status.content %></p>

					
			</li>	
		</ol>	
	</div>
	
</div>

