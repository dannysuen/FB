<% provide :title, @user.name %>

<div class="row" id="profile">

	<aside class="col-md-3">
		<section class="user_info">
			<%= @user.name %>
		</section>
	</aside>

	<div class="col-md-6">						
			
		<ol class="statuses">
			<%= render 'shared/status_form' if current_user?(@user) %>

			<% if @user.statuses.any? %>	
				<%= render @statuses %>	
			<% end %>
			<%= will_paginate @statuses if @user.statuses.any? %>
		</ol>
		

	</div>

</div>